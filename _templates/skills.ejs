<div class="panel panel-default"
     data-toggle="tooltip"
     data-placement="top"
     title="Based on how quickly I believe I can find solutions to problems">
  <div class="panel-heading share-tech-mono text-center">
    <strong>Computer Skills</strong>
  </div>
  <div class="panel-body" style="padding: 4px">
    <div id="skills" data-bind="foreach: skills">
      <div class="progress" style="margin-bottom: 4px">
        <div class="progress-bar text-left" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"
             style="text-align: left !important; padding-left: 4px"
             data-bind="style: {width: level + '%', 'background-color': $parent.toColor(level)}">
          <span data-bind="text: skill"></span>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="js/skills.js"></script>
<script>
var viewModel = {
    skills: skills,
    toColor: function (level) {
        var r,g,b;
        r = 2*(100-level);
        g = 3*(100-level);
        b = 160;
        var col = ['rgb(',r,',',g,',',b,')'].join('');
        return col;
    }
}

ko.applyBindings(viewModel, document.getElementById('skills'));
</script>
